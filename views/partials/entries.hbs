{{#each entries}}
  <div class="box">
    <a href="/term/{{title}}" class="title mb-4 is-block">
      {{title}}
    </a>
    <div class="content">
      {{body}}
    </div>
    <div class="bottom is-flex is-justify-content-flex-end">
      <a href="/user/{{user.username}}">
        {{user.username}}
      </a>
    </div>
  </div>
{{/each}}